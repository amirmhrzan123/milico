<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="app.com.milico.ui.main.MainViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray">


        <ImageView
            android:id="@+id/iv_brand_logo"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:src="@color/colorPrimary"
            app:imageUrl="@{viewModel.clubLogo}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_left_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            app:layout_constraintBottom_toTopOf="parent"
            android:padding="@dimen/dimen_40"
            app:layout_constraintEnd_toStartOf="@+id/guideline_home"
            app:layout_constraintStart_toStartOf="@+id/guideline_left_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_vector_home" />


        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_marginBottom="8dp"
            android:padding="@dimen/dimen_40"
            android:contentDescription="@string/todo"
            android:onClick="@{() -> viewModel.onInfoClicked()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_info"
            app:layout_constraintStart_toStartOf="@+id/guideline_home"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_vector_info" />

        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_marginBottom="8dp"
            android:padding="@dimen/dimen_40"
            android:contentDescription="@string/todo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_logout"
            app:layout_constraintStart_toStartOf="@+id/guideline_info"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_logout" />

        <ImageView
            android:id="@+id/iv_app_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/todo"
            android:src="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline_right_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            app:layout_constraintStart_toStartOf="@id/guideline_left_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_0dp"
            android:background="@color/colorWhite"
            app:layout_constraintStart_toStartOf="@id/guideline_home"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_0dp"
            android:background="@color/colorWhite"
            app:layout_constraintStart_toStartOf="@id/guideline_info"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_0dp"
            android:background="@color/colorWhite"
            app:layout_constraintStart_toStartOf="@id/guideline_info"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_0dp"
            android:background="@color/colorWhite"
            app:layout_constraintStart_toStartOf="@id/guideline_logout"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_0dp"
            android:background="@color/colorWhite"
            app:layout_constraintLeft_toLeftOf="@id/iv_app_logo" />



        <android.support.constraint.Guideline
            android:id="@+id/guideline_left_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".20" />


        <android.support.constraint.Guideline
            android:id="@+id/guideline_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".30" />


        <android.support.constraint.Guideline
            android:id="@+id/guideline_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".40" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".50" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_right_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".84" />


    </android.support.constraint.ConstraintLayout>


</layout>

