<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>


        <variable
            name="viewModel"
            type="app.com.milico.ui.dashboard.DashBoardViewModel"/>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        >

        <android.support.constraint.Guideline
            android:id="@+id/guideline_lower_baseline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorWhite"
            app:layout_constraintTop_toTopOf="@+id/guideline_lower_baseline" />


        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/loyalty_value_background"
            app:layout_constraintBottom_toTopOf="@+id/guideline_lower_baseline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/middle_segment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.Guideline
            android:id="@+id/middle_segment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50" />

        <android.support.constraint.Guideline
            android:id="@+id/editText_starting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />

        <android.support.constraint.Guideline
            android:id="@+id/tv_starting_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.07" />

        <android.support.constraint.Guideline
            android:id="@+id/tv_starting_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <android.support.constraint.Guideline
            android:id="@+id/tv_second_starting_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55" />

        <android.support.constraint.Guideline
            android:id="@+id/tv_first_end_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />


        <TextView
            android:id="@+id/tv_convert_dashboard"
            fontPath="@string/font_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/points_to_retail"
            android:textColor="@color/keypad_selected"
            android:textSize="@dimen/textsize_40"
            app:layout_constraintEnd_toStartOf="@+id/tv_first_end_right"
            app:layout_constraintStart_toStartOf="@+id/tv_starting_left"
            app:layout_constraintTop_toTopOf="@+id/tv_starting_top" />

        <TextView
            android:id="@+id/tv_welcome_back"
            fontPath="@string/font_extrabold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/welcome_back"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_60"
            app:layout_constraintStart_toStartOf="@+id/tv_convert_dashboard"
            app:layout_constraintTop_toBottomOf="@+id/tv_convert_dashboard" />

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_60"
            app:layout_constraintStart_toStartOf="@+id/tv_welcome_back"
            app:layout_constraintTop_toBottomOf="@+id/tv_welcome_back" />

        <TextView
            android:id="@+id/tv_membership_status"
            fontPath="@string/font_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/textView_background"
            android:padding="@dimen/horizontal_margin"
            android:text="@string/tv_membership_status"
            android:textColor="@color/textView_color"
            android:textSize="@dimen/textsize_25sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_convert_dashboard"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_convert_dashboard"
            app:layout_constraintTop_toTopOf="@+id/editText_starting" />

        <TextView
            android:id="@+id/textView5"
            fontPath="@string/font_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/textView_background"
            android:padding="@dimen/horizontal_margin"
            android:text="@string/tv_expiry_date"
            android:textColor="@color/textView_color"
            android:textSize="@dimen/textsize_25sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_convert_dashboard"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_convert_dashboard"
            app:layout_constraintTop_toBottomOf="@+id/tv_membership_status" />

        <TextView
            android:id="@+id/textView6"
            fontPath="@string/font_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/textView_background"
            android:padding="@dimen/horizontal_margin"
            android:text="@string/tv_email"
            android:textColor="@color/textView_color"
            android:textSize="@dimen/textsize_25sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_convert_dashboard"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/tv_convert_dashboard"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/loyalty_value_available"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_40"
            app:layout_constraintStart_toStartOf="@+id/tv_second_starting_left"
            app:layout_constraintTop_toTopOf="@+id/tv_starting_top" />

        <TextView
            android:id="@+id/tv_loyalty_value"
            fontPath="@string/font_extrabold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.1"
            android:text="@string/loyalty_value"
            android:textColor="@color/not_ok_keypad"
            android:textSize="@dimen/textsize_120"
            app:layout_constraintBottom_toBottomOf="@+id/tv_userName"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/tv_welcome_back"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_available_loyalty"
            fontPath="@string/font_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/textView_background"
            android:paddingBottom="@dimen/horizontal_margin"
            android:paddingEnd="@dimen/horizontal_margin"
            android:paddingStart="@dimen/dimen_50"
            android:paddingTop="@dimen/horizontal_margin"
            android:text="@string/points_available"
            android:onClick="@{()->viewModel.onPointsClicked()}"

            android:textColor="@color/textView_color"
            android:textSize="@dimen/textsize_25sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_loyalty_value"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_loyalty_value"
            app:layout_constraintTop_toTopOf="@+id/editText_starting" />

        <Button
            android:id="@+id/btn_redeem"
            fontPath="@string/font_bold"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:background="@color/redeem_button"
            android:text="@string/redeem"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_40"
            android:onClick="@{()->viewModel.onRedeemClicked()}"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/tv_available_loyalty"
            app:layout_constraintStart_toStartOf="@+id/tv_available_loyalty"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <ImageView
            android:id="@+id/iv_edit_email"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="@dimen/horizontal_margin"
            android:layout_marginTop="8dp"
            android:padding="@dimen/dimen_5dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6"
            app:srcCompat="@drawable/ic_edit" />

        <Button
            android:id="@+id/btn_edit_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/pop_up_red_background"
            android:padding="@dimen/horizontal_margin"
            android:text="@string/edit_email_address"
            android:textColor="@color/textView_color"
            android:textSize="@dimen/textsize_25sp"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />


    </android.support.constraint.ConstraintLayout>


</layout>

