<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="model"
            type="app.com.milico.data.local.json.JsonModel"/>



    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:background="@color/item_background">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="10"
            android:orientation="horizontal"
            android:background="@color/black">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="@string/price"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_30"
                />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_edit"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingStart="@dimen/dimen_10"
                android:text="@string/edit"
                android:textSize="@dimen/textsize_30"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/textView_color"
                android:layout_marginStart="@dimen/dimen_10"/>

            <TextView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="@dimen/textsize_30"
                android:text="@string/remove"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingEnd="@dimen/dimen_40"
                android:paddingStart="@dimen/dimen_20dp"
                android:drawableEnd="@drawable/ic_cancel"
                android:drawablePadding="@dimen/dimen_10"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_git_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="80dp"
            android:layout_margigit statusnEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.475"
            app:srcCompat="@color/color_gray" />


    </android.support.constraint.ConstraintLayout>



</layout>

