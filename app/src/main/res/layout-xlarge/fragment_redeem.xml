<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="app.com.milico.ui.redeem.RedeemViewModel"/>



    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <android.support.constraint.Guideline
            android:id="@+id/guideline_lower_baseline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <android.support.constraint.Guideline
            android:id="@+id/recylerView_beginning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />


        <com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView
            android:id="@+id/rvGiftsCards"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:fastScrollAutoHide="false"
            app:fastScrollTrackColor="@android:color/transparent"
            style="@style/scrollbar_shape_style_horizontal"
            app:fastScrollPopupBgColor="@android:color/transparent"
            app:fastScrollEnableThumbInactiveColor="false"
            app:fastScrollThumbColor="@android:color/transparent"
            android:scrollbars="horizontal"
            app:giftsCardList="@{viewModel.listGiftsCards}"
            app:layout_constraintBottom_toTopOf="@+id/guideline_lower_baseline"
            app:layout_constraintTop_toTopOf="@+id/recylerView_beginning"
             />
        <!--<android.support.v7.widget.RecyclerView
            android:id="@+id/rvGiftsCards"
            style="@style/scrollbar_shape_style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp"
            app:layout_goneMarginBottom="@dimen/dimen_10"
            app:giftsCardList="@{viewModel.listGiftsCards}"
            app:layout_constraintBottom_toTopOf="@+id/guideline_lower_baseline"
            app:layout_constraintTop_toTopOf="@+id/recylerView_beginning" />
-->

        <TextView
            android:id="@+id/tv_touch_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="@string/touch_card"
            android:textColor="@color/textView_color"
            android:textSize="@dimen/textsize_40"
            app:layout_constraintBottom_toTopOf="@+id/tv_best_seller"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_best_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:text="@string/best_sellers"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_80"
            app:layout_constraintBottom_toTopOf="@+id/recylerView_beginning"
            app:layout_constraintStart_toStartOf="@+id/tv_touch_card"
            app:layout_constraintTop_toBottomOf="@+id/tv_touch_card" />



    </android.support.constraint.ConstraintLayout>



</layout>


